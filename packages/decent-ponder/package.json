{
  "name": "decent-ponder",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ponder dev --schema=onchain",
    "dev:debug": "ponder dev --schema=onchain --disable-ui",
    "start": "npm run ponder:prune && ponder start --schema=${RAILWAY_DEPLOYMENT_ID%%-*} --views-schema=onchain",
