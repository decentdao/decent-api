    "lint": "eslint ./**/*.ts ./**/*.*.ts",
    "pretty": "prettier . --write"
  },
  "dependencies": {
    "@decentdao/decent-contracts": "^2.0.0-rc.7",
    "hono": "^4.8.5",
    "ponder": "^0.11.27",
    "viem": "^2.32.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.5",
    "eslint": "^8.53.0",
    "eslint-config-ponder": "^0.11.27",
    "prettier": "^3.6.2"
  }
}
