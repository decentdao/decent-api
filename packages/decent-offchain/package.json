{
  "name": "decent-offchain",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "studio": "drizzle-kit studio --config=./src/db/drizzle.config.ts",
    "push": "drizzle-kit push --config=./src/db/drizzle.config.ts",
    "push:testdb": "drizzle-kit push --config=./src/db/drizzle.onchain.ts",
    "pull": "drizzle-kit pull --config=./src/db/drizzle.config.ts",
    "generate": "drizzle-kit generate --config=./src/db/drizzle.config.ts",
    "migrate": "drizzle-kit migrate --config=./src/db/drizzle.config.ts",
    "dev": "bun --watch run src/api/index.ts",
    "start": "bun run src/api/index.ts",
    "test": "bun test test/order.test.ts",
    "lint": "eslint .",
    "postinstall": "cd node_modules/decent-types && bun run build"
  },
  "dependencies": {
    "@fractal-framework/fractal-contracts": "^1.5.0-rc.5",
    "drizzle-orm": "^0.40.0",
    "hono": "^4.7.4",
    "nanoid": "^5.1.3",
    "pg": "^8.14.0",
    "viem": "^2.23.11",
    "decent-types": "github:decentdao/decent-types#d3aac9b"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/bun": "^1.2.5",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.29.0"
  }
}
