{
  "name": "decent-offchain",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "studio": "drizzle-kit studio --config=./src/db/drizzle.config.ts",
    "push": "drizzle-kit push --config=./src/db/drizzle.config.ts",
    "pull": "drizzle-kit pull --config=./src/db/drizzle.config.ts",
    "dev": "bun --watch run src/api/index.ts",
    "start": "bun run src/api/index.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.40.0",
    "hono": "^4.7.4",
    "nanoid": "^5.1.3",
    "pg": "^8.14.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.5",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5"
  }
}
